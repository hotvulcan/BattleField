<p id="notice"><%= notice %></p>

<h1>Classmates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classmates.each do |classmate| %>
      <tr>
        <td><%= classmate.name %></td>
        <td><%= classmate.age %></td>
        <td><%= link_to 'Show', classmate %></td>
        <td><%= link_to 'Edit', edit_classmate_path(classmate) %></td>
        <td><%= link_to 'Destroy', classmate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classmate', new_classmate_path %>
